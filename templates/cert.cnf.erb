# create RSA certs - Server

RANDFILE = ./openssl.rnd

[ req ]
default_bits = <%= scope.lookupvar('monit::cert_params::bits') %>
encrypt_key = yes
distinguished_name = req_dn
x509_extensions = cert_type

[ req_dn ]
countryName                     = Country Name (2 letter code)
countryName_default             = <%= scope.lookupvar('monit::cert_params::country_name') %>

stateOrProvinceName             = State or Province Name (full name)
stateOrProvinceName_default     = <%= scope.lookupvar('monit::cert_params::state_name') %>

localityName                    = Locality Name (eg, city)
localityName_default            = <%= scope.lookupvar('monit::cert_params::locality_name') %>

organizationName                = Organization Name (eg, company)
organizationName_default        = <%= scope.lookupvar('monit::cert_params::organization') %>

organizationalUnitName          = Organizational Unit Name (eg, section)
organizationalUnitName_default  = <%= scope.lookupvar('monit::cert_params::organizational_unit') %>

commonName                      = Common Name (FQDN of your server)
commonName_default              = <%= @fqdn %>

emailAddress                    = Email Address
emailAddress_default            = <%= scope.lookupvar('monit::cert_params::email') %>

[ cert_type ]
nsCertType = server
